<h1>Listing Results</h1>

<table>
  <thead>
    <tr>
      <th>Started date</th>
      <th>Ended date</th>
      <th>Comment</th>
      <th>Task</th>
      <th>User</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.started_date %></td>
        <td><%= result.ended_date %></td>
        <td><%= result.comment %></td>
        <td><%= result.task.name %></td>
        <td><%= result.user.name %></td>
         <td><%= result.type %></td>
        <td><%= link_to 'Show', result %></td>
        <td><%= link_to 'Edit', edit_result_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

