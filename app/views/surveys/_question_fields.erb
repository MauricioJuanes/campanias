<p>
  <%= f.label :content, "Question" %><br />
  <%= f.text_area :content, :rows => 3 %><br />
  <%=  f.select(:type, Question.types.keys.map {|type| [type.titleize,type]})  %><br>
  <%= f.check_box :is_required %> obligatoria<br/>
  <%= f.label :min_options, "Minimo de respuestas" %><br />
  <%= f.number_field :min_options %> <br>
  <%= f.label :max_options, "Maximo de respuestas" %><br />
  <%= f.number_field :max_options %> <br>
  <%= f.fields_for :options do |option_builder| %>
    <%= render "option_fields", :f => option_builder %>
  <% end %>
</p>
<hr/>
